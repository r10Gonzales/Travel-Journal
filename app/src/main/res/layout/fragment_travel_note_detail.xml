<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".fragment.TravelNoteDetailFragment">

    <!-- AppBarLayout with Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar with back arrow -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/ic_close"
            app:navigationIconTint="@color/suva_grey"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Title EditText pakai Material Design -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:hintAnimationEnabled="true"
        app:boxStrokeWidth="2dp"
        app:boxBackgroundMode="outline"
        android:background="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/solitude"
            android:hint="@string/title"
            android:textSize="18sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Description EditText pakai Material Design -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:hintAnimationEnabled="true"
        app:boxStrokeWidth="2dp"
        app:boxBackgroundMode="outline"
        android:background="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/solitude"
            android:hint="@string/description"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="6" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Location EditText pakai Material Design -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:hintAnimationEnabled="true"
        app:boxStrokeWidth="2dp"
        app:boxBackgroundMode="outline"
        android:background="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/solitude"
            android:hint="@string/location"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Update Button pakai Material Design -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="@string/edit_note"
        android:backgroundTint="@color/sushi"
        android:textColor="@color/white"
        app:icon="@drawable/ic_edit_note"
        app:iconGravity="textStart"
        app:cornerRadius="8dp"
        app:rippleColor="?attr/colorControlHighlight" />

    <!-- Delete Button pakai Material Design -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="@string/delete"
        android:backgroundTint="@color/dark_orchid"
        android:textColor="@color/white"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textStart"
        app:cornerRadius="8dp"
        app:rippleColor="?attr/colorControlHighlight" />
</LinearLayout>